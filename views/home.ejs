<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="../css/home.css">
    <title>Votacao</title>
</head>
<body class="bodyContent">
    <header class="headerFlexContent">
        <div><p>logo</p></div>
        <div class="divFlexContent">
            <div class="navContent">
                <nav class="navImg"><img src="../img/linkedinIcon.png" class="imgNav" alt="linkedin"></nav>
                <nav class="navImg"><img src="../img/GitHub-Mark github icone.png" class="imgNav" alt="github"></nav>
                <nav class="navImg"><img src="../img/kisspng-amnesty-international-usa-email-computer-icons-mes-email-icon-5ad183018f7994.8517345215236800015877.jpg" class="imgNav" alt="email"></nav>
            </div>
            <div class="loginCadastro">
                <!-- posso colocar isso como um modal e remover as views-->
                <a href="../views/login.ejs" class="buttonConta">login</a>
                <a href="../views/cadastro.ejs" class="buttonConta">cadastro</a>
            </div>
        </div>
    </header>
    <main class="mainContent">
        <section class="votacaoContent">
            <% assuntosPag.forEach((element)=>{ %>
            <div class="votacao">
                <div>Nome ou Descricao Sobre a Votacao <%= element.nome %></div>
                <div class="numeroVotoContent">
                    <p class="votofirst TextBoldformat">voto 1</p>
                    <p class="votoSecond TextBoldformat">voto 2</p>
                </div>
                <div class="grafico">
                    <!-- utilizar de js para aumentar o width com base no numero value -->
                    <div class="porcentagemVoto" data-tamanho=<%= ( element.votos1 * 100) / (element.votos1 + element.votos2) %>></div>
                </div>
                <form action="votacao" method="post" class="votacaoForm">
                    <!-- talvez um submit com name="voto" -->
                    <input type="hidden" name="id" value= <%= element.id %> >
                    <input type="button" name="voto" class="buttonVoto TextBoldformat" value="voto1">
                    <input type="button" name="voto" class="buttonVoto TextBoldformat" value="voto2">
                    <!-- colocar em voto porcentagem o numero que tem no banco -->
                </form>
            </div>
            <% }) %>
        </section>
    </main>
    <footer>

    </footer>
    <script src="../js/home.js"></script>
</body>
</html>